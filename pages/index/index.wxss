.search-wrap{
  background:#1bc859;
  width:100%;
  padding-bottom:16rpx;
}
.search{
  height:40rpx;
  line-height:40rpx;
  background:#fff;
  width:95%;
  margin:0 auto;
  border-radius:8rpx;
  font-size:14rpx;
  text-align:center;
}
.search-img{
  width:30rpx;
height:30rpx;
vertical-align:middle;

}
.search text{
  vertical-align:middle;
}
.scroll-wrap{
  display:flex;
  flex-direction:row;
}
.inner-wrap{
  height:300rpx;
  display:flex;
  flex-direction:row;
  font-size:14rpx;
}
.main {
  padding:10rpx 0 0 15rpx;
}
.title {
  font-size:16rpx;
  font-weight:700;
  float:left;
  
}
.more{
  float:right;
  color:#1bc859;
  font-size:10px;
  margin-right:10rpx;

}
.item-nav{
  display:flex;
  flex-direction:row;
}
swiper{
  margin: 20px 0 50px 0;
}
.item-img{
  width:180rpx;
  height:250rpx;
}
.item{
  display:flex;
  flex-direction:column;
  width:180rpx;
  margin:0 10rpx;
  border:1rpx solid #efeded;
}
.item:first-child{
  margin-left:0;
}
.item-title{
  font-size:14rpx;
  font-weight:600;
  margin: 10rpx 0 5rpx 0;
}
.star-comment{
  position:relative;
  height:20rpx;
  
}
.star-wrap{
  position:absolute;
  left:0;
}
.comment{
  float:right;
  position:absolute;
  right:0;
  
}
.star-img{
  width:20rpx;
  height:20rpx;
}
