.container{
    width:100%;
   margin: 0 auto;
   font-size:22rpx;
}
.s{
    border-radius:8rpx;
    box-sizing:border-box;
    position:relative;
    height:300rpx;
    color:#fff;
}
.bgk-img{
    position:absolute;
    left:0;
    top:0;
    right:0;
    bottom:0;
    width:100%;
    height:100%;
}
.shade{
    background:rgba(0,0,0,.6);
    width:100%;
    height:100%;
    box-sizing:border-box;
    padding:20rpx;
    position:relative;
    border-radius:8rpx;
}
.title-banner{
    position:absolute;
    bottom:10%;
    left:50%;
    transform:translateX(-50%);
    font-size:26rpx;
   color:#ddd;
   display:flex;
   flex-direction: column;
   text-align:center;
}
.title{
   font-size:40rpx;
   color:#fff;
   font-weight:600;
}
.explain{
  font-weight:500;
  color:rgb(247, 244, 244);
}
/* list */
.list{
    background:#e6e3e3;
}
.rank{
    background:#ccc;
    border-radius:8rpx;
    color:rgb(31, 20, 4);
    font-size:22rpx;
    line-height:40rpx;
    display:inline-block;
    padding:0 10rpx;
}
.rank.top{
  background:rgb(245, 124, 44);
}
.rank.one{
  background:rgb(231, 110, 110);
}
.rank.two{
  background:rgb(226, 189, 66);
}
.intro {
    width:100%;
    color:#a09e9e;
    margin-bottom:14rpx;
    background:#fff;
    padding:20rpx;
  }
  .intro-wrap{
      display:flex;
      flex-direction: row;
      margin:15rpx 0 20rpx 0;
  }
  .intro-r {
    display:flex;
    float:right;
    margin-left:20rpx;
    font-size:22rpx;
    width:100%;
    height:220rpx;
  }
  .intro-txt{
    width:70%;
    display:flex;
    flex-direction:column;
    height:100%;
    border-right:1rpx dashed #ccc;
  }
  .intro-img {
    width:150rpx;
    min-width:150rpx;
    height:220rpx;
    border:1rpx solid #ccc;
  }
  .title-c {
      color:#000;
    font-size:32rpx;
    font-weight:700;
  }
  .title-e {
    font-size:28rpx;
    font-weight:500;
    color:#a09e9e;
  }
  .tag {
     margin:20rpx 0 30rpx 0;
  }
  .wish{
      width:30%;
      display:flex;
    flex-direction:column;
    text-align:center;
    position: relative;
    color:#f3a105;
  }
  .wish-wrap{
    position:absolute;
    left:50%;
    top:50%;
    transform:translate(-50%,-50%);
    width:100%;
    display:flex;
    flex-direction:column;
    text-align:center;
  }
  .wish image{
    width:30rpx;
    height:30rpx;
    margin:10rpx auto;
  }
  .wish text{
    vertical-align:middle;
  }
  .star-wrap{
    margin: 10rpx 0;
  }
  .star-img{
    width:20rpx;
    height:20rpx;
  }
  .review-count{
    background:#f1eeee;
    line-height:60rpx;
    font-size:22rpx;
    padding:0 10rpx;
  }
  .isSee{
    background:#fff;
    padding:0 20rpx;
    line-height:40rpx;
    margin:20rpx 0;
  }
  .login{
    background:#f3a105;
    color:#000;
    border-radius:22rpx;
    line-height:40rpx;
    padding:0 20rpx;
  }
