.container{
    width:95%;
   margin: 0 auto;
}
.s{
    border-radius:8rpx;
    margin:10rpx auto;
    box-sizing:border-box;
    position:relative;
}
.bgk-img{
    position:absolute;
    left:0;
    top:0;
    right:0;
    bottom:0;
    width:100%;
    height:100%;
    border-radius:8rpx;
}
.title{
    font-size:40rpx;
    color:#fff;
    line-height:60rpx;
    margin-bottom:15rpx;
}
.board-img{
    width:120rpx;
    height:200rpx;
    z-index:999;
    position:relative;
}
.board-img:not(:first-of-type){
    margin-left:-20rpx;
    z-index:998;
}
.board-img:last-child{
    z-index:997;
    margin-left:-30rpx;
}
.shade{
    background:rgba(0,0,0,.5);
    width:100%;
    box-sizing:border-box;
    padding:20rpx;
    position:relative;
    border-radius:8rpx;
}
.count{
    color:#d0cccc;
    position:absolute;
    left:330rpx;
    top:50%;
    transform:translateY(-50%);
}
.wrap{
    position:relative;
}
/* top250 */
.list{
    overflow:hidden;
    position:relative;
    margin-top:20rpx;
    width:95%;
    margin:20rpx auto;
}
.list-l{
    width:160rpx;
    height:160rpx;
    border-radius:8rpx;
    margin-right:30rpx;
}
.list-r{
    border:1rpx solid #ccc;
    border-left:0;
    font-size:20rpx;
    margin-top:20rpx;
    border-radius:8rpx;
}
.list-r view{
    line-height:40rpx;
}
.title-wrap{
    display:flex;
    flex-direction:column;
    font-size:20rpx;
    position:absolute;
    color:#dcd5d5;
    left:80rpx;
    top:80rpx;
    transform:translate(-50%,-50%);
    text-align:center;
}
.title-wrap.top{
    color:#f3a105;
}
.list-title{
    font-size:30rpx;
    weight:700;
    color:#fff;
}
.average{
    color:#f3a105;
    margin-left:10rpx;
}
.list-shade{
    background:rgba(0,0,0,.7);
    width:160rpx;
    box-sizing:border-box;
    padding:20rpx;
    position:absolute;
    border-radius:8rpx;
    height:160rpx;
}